<%- include("partials/header.ejs") %>
<div class="container-fluid bg-1 text-center">
    <div class="container bg-2">
        <div class="container  text-center heading  ">
            <h2 style="color:#035c48;"> <%= head %></h2>
        </div>
        <form class="inputform" action="/submit" method="post">
            <textarea class="text" name="task" 
              placeholder="Create your Task"></textarea>
            <button type="submit" class="button">+</button>
          </form>
          <div class=" container list  text-center">
           
            <% if (locals.todos) { %>
             <% todos.forEach(element => { %>
            <ol class="larger">
              <input  type="checkbox" name="tasksBox" >
             <p class="task"> <%= element %></p>
             
            </ol>
             <% }) %>
            <% } %>
          </div>
    
        </div>
    
    
    </div>
      <img class="gif1" src="images/f2.png" alt="">

   
  </div>
